    <define name="MAG_Y_NEUTRAL" value="-412"/>
    <define name="MAG_Z_NEUTRAL" value="71"/>
    <define name="MAG_X_SENS" value="3.707420822119781" integer="16"/>
    <define name="MAG_Y_SENS" value="4.148937385955166" integer="16"/>
