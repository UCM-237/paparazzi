<!DOCTYPE module SYSTEM "module.dtd">

<module name="serial_nps" dir="com">
  <doc>
    <description>
      Decoder for serial protocol

      Data are extracted and sent from a serial link 
      This version is for NPS, it does not use the serial_com module.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="SR_Com">
        <dl_setting MAX="1" MIN="0" STEP="1" VAR="serial_msg_test" shortname="test" values="FALSE|TRUE"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <dep>
    <provides>navigation</provides>
  </dep>
  <header>
    <file name="serial_nps.h"/>
  </header>
  <init fun="serial_nps_init()"/>
  <periodic fun="serial_nps_ping()" freq="10" autorun="TRUE"/>
  <!-- <event fun="serial_event()"/>   -->

  <makefile target="nps" firmware="rover">
    <file name="serial_nps.c"/>
  </makefile>
</module>
